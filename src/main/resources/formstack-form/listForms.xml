<!-- Method Documentation URL: http://developers.formstack.com/v2.0/docs/form-get -->
<template name="listForms" xmlns="http://ws.apache.org/ns/synapse">
   <parameter name="folders" description="Boolean parameter to indicate whether to list forms categorized by folders they belong to." />
   <sequence>
      <property name="uri.var.folders" expression="$func:folders" />
      <filter source="boolean(get-property('uri.var.folders'))" regex="true">
         <then>
            <property name="uri.var.urlQuery" expression="fn:concat('?folders=', get-property('uri.var.folders'))" />
         </then>
      </filter>
      <call>
         <endpoint>
            <http method="get" uri-template="{+uri.var.apiUrl}/form.{+uri.var.format}{+uri.var.urlQuery}" />
         </endpoint>
      </call>
      <!-- Remove custom Headers from the API Response -->
      <header name="X-Robots-Tag" action="remove" scope="transport" />
      <header name="P3P" action="remove" scope="transport" />
      <header name="Cache-Control" action="remove" scope="transport" />
   </sequence>
</template>